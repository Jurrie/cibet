<?xml version="1.0" encoding="UTF-8"?>
<cibet xmlns="http://www.logitags.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.logitags.com 
   ../../main/resources/cibet-config_1.0.xsd">

	<actuator name="SEC2">
		<class>com.logitags.cibet.actuator.springsecurity.SpringSecurityActuator</class>
		<properties>
			<urlAccess>hasRole('admin") and hasIpAddress('127.0.0.1') </urlAccess>
		</properties>
	</actuator>

	<actuator name="SEC3">
		<class>com.logitags.cibet.actuator.springsecurity.SpringSecurityActuator</class>
		<properties>
			<secondPrincipal>true</secondPrincipal>
			<urlAccess>hasRole('second')</urlAccess>
		</properties>
	</actuator>

	<setpoint id="http-spring1">
		<controls>
			<event>INVOKE</event>
			<target>http://localhost:8788/HttpSpringSecurity2IT/test/ts*</target>
			<method>GET,POST,OPTIONS</method>
		</controls>
		<actuator name="SEC2"/>
		<actuator name="TWO_MAN_RULE"/>
	</setpoint>

	<setpoint id="http-spring3" extends="http-spring1">
		<controls>
			<event>RELEASE_INVOKE</event>
		</controls>
		<actuator name="SEC3"/>
	</setpoint>

</cibet>   