<?xml version="1.0" encoding="UTF-8"?>
<cibet xmlns="http://www.logitags.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.logitags.com 
   ../../main/resources/cibet-config_1.0.xsd">

<!-- 
	xsi:schemaLocation="http://www.logitags.com cibet-config.xsd">  -->

	<actuator name="ARCH1">
		<class>com.logitags.cibet.actuator.archive.ArchiveActuator</class>
		<properties>
			<jndiName>Value of prop1</jndiName>
		</properties>
	</actuator>

	<actuator name="ARCH2">
		<class>com.logitags.cibet.actuator.archive.ArchiveActuator</class>
		<properties>
			<jndiName>Value of prop1-A3</jndiName>
		</properties>
	</actuator>

	<actuator name="ARCH3">
		<class>com.logitags.cibet.actuator.archive.ArchiveActuator</class>
		<properties>
			<jndiName>Value of prop1-A4</jndiName>
		</properties>
	</actuator>

	<setpoint id="A">
		<controls>
			<tenant>ten1</tenant>
			<event>INSERT, DELETE</event>
			<target>com.cibethelper.entities.TEntity,
				com.cibethelper.entities.TComplexEntity</target>
			<stateChange>nixxi, counter,countValue</stateChange>
		</controls>
		<actuator name="INFOLOG"/>
	</setpoint>

	<setpoint id="A2" >
		<controls>
			<tenant>ten2</tenant>
			<event>INSERT, DELETE, UPDATE</event>
			<target>com.cibethelper.entities.TEntity,
				com.cibethelper.entities.TComplexEntity</target>
			<stateChange>nixxi, counter, compValue</stateChange>
		</controls>
		<actuator name="ARCH1"/>
	</setpoint>

	<setpoint id="A3">
		<controls>
			<tenant>ten2</tenant>
			<event>DELETE, UPDATE</event>
			<target>com.cibethelper.entities.TEntity,
				com.cibethelper.entities.TComplexEntity</target>
			<stateChange exclude="true">nixxi, counter</stateChange>
				<!-- name>com.logitags.cibet.util.TComplexEntity</name>
				<constraints>
					<excludeStateChange>nixxi, compValue</excludeStateChange>
				</constraints-->
		</controls>
		<actuator name="ARCH2"/>
	</setpoint>

	<setpoint id="A4">
		<controls>
			<tenant>ten2</tenant>
			<event>DELETE, UPDATE</event>
			<target>com.cibethelper.entities.TEntity</target>
			<stateChange>nixxi, counter</stateChange>
			<!-- target>
				<name>com.logitags.cibet.util.TComplexEntity</name>
				<constraints>
					<excludeStateChange>nixxi, compValue</excludeStateChange>
					<excludeInvoker>**</excludeInvoker>
				</constraints>
			</target-->
		</controls>
		<actuator name="ARCH3"/>
	</setpoint>

	<setpoint id="C">
		<controls>
			<event>INVOKE</event>
			<target>com.cibethelper.entities.TEntity</target>
			<method>"doSomething(int, String)",
				"doSomething(int, java.lang.String)",
				com.cibethelper.entities.TEntity)</method>
			<invoker>
							com.logitags.cibet.*
            </invoker>
				<!-- method>
					<name>doSomething(int[], java.lang.String[][])</name>
					<constraints>
						<excludeInvoker>
							com.logitags.cibet.*
                  </excludeInvoker>
					</constraints>
				</method-->
		</controls>
		<actuator name="ARCHIVE"/>
		<actuator name="SIX_EYES"/>
	</setpoint>

	<setpoint id="C1">
		<controls>
			<event>RELEASE</event>
			<target>com.cibethelper.base.SingletonFactory</target>
			<method>doSomethingxx(int, String),
				doSomethingxx(int, java.lang.String,
				com.cibethelper.entities.TEntity)</method>
		</controls>
		<actuator name="SIX_EYES"/>
	</setpoint>

	<setpoint id="C2">
		<controls>
			<event>RELEASE</event>
			<target>com.cibethelper.base.SingletonFactory</target>
			<method>"doSomethingxx(int, String)",
				doSomethingxx(int, java.lang.String,
				com.cibethelper.entities.TEntity)</method>
		</controls>
		<actuator name="SIX_EYES"/>
	</setpoint>

</cibet>   