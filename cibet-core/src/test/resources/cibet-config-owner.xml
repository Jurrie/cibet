<?xml version="1.0" encoding="UTF-8"?>
<cibet xmlns="http://www.logitags.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.logitags.com 
   ../../main/resources/cibet-config_1.3.xsd">

	<actuator name="OWNERCHECK">
		<properties>
			<ownerAnnotation>com.logitags.cibet.actuator.owner.Owner</ownerAnnotation>
		</properties>
	</actuator>

	<actuator name="OWNERCHECK-EX">
		<class>com.logitags.cibet.actuator.owner.OwnerCheckActuator</class>
		<properties>
			<throwWrongOwnerException>true</throwWrongOwnerException>
		</properties>
	</actuator>

	<actuator name="OWNERCHECK-CB">
		<class>com.logitags.cibet.actuator.owner.OwnerCheckActuator</class>
		<properties>
			<ownerCheckCallback>com.cibethelper.MyOwnerCheckCallback</ownerCheckCallback>
		</properties>
	</actuator>

	<setpoint id="OC1">
		<controls>
			<tenant>Ralf</tenant>
			<event>PERSIST</event>
		</controls>
		<actuator name="OWNERCHECK" />
	</setpoint>

	<setpoint id="OC2">
		<controls>
			<tenant>Werner</tenant>
			<event>PERSIST</event>
			<target>com.cibethelper.entities.owner.Company,
				com.cibethelper.entities.owner.Merchant,
				com.cibethelper.entities.owner.Merchant2,
				com.cibethelper.entities.owner.Product,
				com.cibethelper.entities.owner.Product2,
				select a from Company a</target>
		</controls>
		<actuator name="OWNERCHECK-EX" />
	</setpoint>

	<setpoint id="OC3">
		<controls>
			<tenant>Heinz</tenant>
			<event>PERSIST</event>
		</controls>
		<actuator name="OWNERCHECK-CB" />
	</setpoint>

</cibet>   